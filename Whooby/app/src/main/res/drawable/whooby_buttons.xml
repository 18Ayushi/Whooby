        <shape android:shape="rectangle">
            <!-- background -->
            <solid android:color="#26FFFFFF" />
            <!-- border -->
            <stroke android:width="2dp" android:color="@color/black" />

            <!-- corner roundness -->
            <corners android:radius="10dp" />
